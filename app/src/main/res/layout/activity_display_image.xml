<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_display_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs490.frame.DisplayImageActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextureView
            android:id="@+id/videoView"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:scaleX=".8"
            android:scaleY=".8"
            android:visibility="gone"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cast_album_art_placeholder"
            android:id="@+id/imageView"
            android:cropToPadding="false"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="false"
            android:layout_weight=".1" />
        <RelativeLayout
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/caption"
                android:layout_centerVertical="true"
                android:text="Description"/>
            <ImageButton
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:id="@+id/favoriteButton"
                android:src="@mipmap/ic_stars_black_24dp"
                android:background="@null"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />
            <ImageButton
                android:layout_width="wrap_content"
                android:id="@+id/downvoteButton"
                android:src="@mipmap/ic_mood_bad_black_24dp"
                android:background="@null"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/favoriteButton"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:text="0"
                android:id="@+id/upvoteCount"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/downvoteButton"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:id="@+id/upvoteButton"
                android:background="@null"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_mood_black_24dp"
                android:layout_toLeftOf="@id/upvoteCount"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/commentsList"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@id/commentsList"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="1"
                    android:id="@+id/commentText" />
                <Button
                    android:layout_weight="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/postCommentButton"
                    android:text="Post"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</ScrollView>
